@model CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<h3>Number of modifications: @Model.NumberUpdated</h3>

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @*@Html.ActionLink("Allocate To Employees", "SetLeave", new { id = item.Id }) |*@
                    <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                        <i class="fade fa-pencil"></i> Allocate to Employees
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
